.flex.flex-col.justify-center.gap-4
  div(class="flex gap-4 items-center justify-center flex-col sm:flex-row")
    h3.info#remaintime= defaultTime
    span.word#word= defaultWord
    h3.info#totalscore= defaultScore

  .flex.gap-4.justify-center.text-3xl
    - var i = 0
    while i < defaultPasses
      <ion-icon class="pass-icon" id="pass #{i++}" title="Passi a disposizione" name="heart"></ion-icon>

    - var j = 0
    while j < defaultDoubles
      <ion-icon class="double-icon" id="double #{j++}" title="Raddoppi a disposizione" name="sparkles"></ion-icon>

  .flex.mt-4.gap-4.text-3xl.justify-center
    a.button.pill-left#play <ion-icon title="Play/Pausa" id="playIcon" name="play-outline"></ion-icon>
    a.button.flex-1#addpoint <ion-icon title="Aggiungi un punto" name="checkmark-outline"></ion-icon>
    a.button.flex-1#removepoint <ion-icon title="Togli un punto" name="close-outline"></ion-icon>
    a.button#double <ion-icon title="Raddoppia" name="sparkles-outline"></ion-icon>
    a.button.pill-right#pass <ion-icon title="Usa un passo" name="heart-dislike-outline"></ion-icon>

  .flex.gap-4.text-xl.justify-center
    a.button.pill#reset <ion-icon title="Comincia da capo" name="refresh-outline"></ion-icon>

include audio.pug
